{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read

/* Language and Environment */
    "target": "es2016",

    /* Modules */
    "module": "commonjs",
    "rootDir": "./src",

    /* Emit */
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
